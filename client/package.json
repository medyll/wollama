{
	"name": "@wollama/client",
	"version": "0.0.9",
	"main": "electron/main.js",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
		"build:sidecar": "pyinstaller --clean --onefile --name chatterbox --distpath ./resources/extraResources ../packages/chatterbox/main.py",
		"package": "npm run build && npm run build:sidecar && electron-builder"
	},
	"build": {
		"appId": "com.wollama.app",
		"productName": "Wollama",
		"directories": {
			"output": "dist_electron"
		},
		"files": [
			"build/**/*",
			"electron/**/*",
			"package.json"
		],
		"extraResources": [
			{
				"from": "resources/extraResources",
				"to": "extraResources",
				"filter": [
					"**/*"
				]
			}
		],
		"win": {
			"target": "nsis"
		},
		"mac": {
			"target": "dmg"
		},
		"linux": {
			"target": "AppImage"
		}
	},
	"dependencies": {
		"@capacitor/android": "^8.0.0",
		"@capacitor/app": "^8.0.0",
		"@capacitor/core": "^8.0.0",
		"@tailwindcss/typography": "^0.5.19",
		"date-fns": "^4.1.0",
		"highlight.js": "^11.11.1",
		"hljs": "^6.2.3",
		"idb": "^8.0.3",
		"marked": "^17.0.1",
		"marked-highlight": "^2.2.3",
		"prismjs": "^1.30.0",
		"rxdb": "^16.21.1",
		"rxjs": "^7.8.2",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@testing-library/user-event": "^14.5.2",
		"@capacitor/cli": "^8.0.0",
		"@iconify/json": "^2.2.416",
		"@iconify/svelte": "^5.1.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-static": "^3.0.10",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/postcss": "^4.1.17",
		"@tailwindcss/vite": "^4.1.17",
		"@testing-library/svelte": "^5.2.9",
		"@types/marked": "^6.0.0",
		"concurrently": "^9.2.1",
		"daisyui": "^5.5.8",
		"electron": "^39.2.6",
		"electron-builder": "^24.13.3",
		"electron-serve": "^3.0.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.1",
		"globals": "^16.5.0",
		"jsdom": "^27.3.0",
		"mdsvex": "^0.12.6",
		"postcss": "^8.5.6",
		"postcss-import": "^16.1.1",
		"postcss-nesting": "^13.0.2",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.3.15",
		"sass": "^1.95.0",
		"sass-embedded": "^1.93.3",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"unplugin-icons": "^22.5.0",
		"vite": "^7.2.7",
		"vitest": "^4.0.15",
		"wait-on": "^9.0.3"
	}
}
